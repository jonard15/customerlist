{% extends 'base.html.twig' %}
{% block body %}
	<h1 class = "page-header">Customer List</h1>
	<table class="table table-striped">
	<thead>
	<tr>
	<th>Id</th>
	<th>Firstname</th>
	<th>Lastname</th>
	
	</tr>
	<thead>
	<tbody>
	{% for customer in customers %}
	<tr>
	<td>{{customer.id}}</td>
	<td>{{customer.firstname}}</td>
	<td>{{customer.lastname}}</td>
	<td>
	<a href="/customer/details/{{customer.id}}" class="btn btn-success">View</a>
	<a href="/customer/edit/{{customer.id}}" class="btn btn-default">Edit</a>
	<a href="/customer/delete/{{customer.id}}" class="btn btn-danger">Delete</a>
	</td>
	</tr>
	{% endfor %}
	</tbody>
	</table>
{% endblock %}